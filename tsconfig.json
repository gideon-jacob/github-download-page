{
  "compilerOptions": {
    "target": "ES6",
    "typeRoots": ["node_modules/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts",
    "config.json"
  ],
  "exclude": ["frontend/*"]
}
